# LSTM 모델 설정 (추후 구현 예정)
LSTM_MODEL_PATH=models/lstm_model.h5

# FinBERT 설정 (추후 구현 예정)
FINBERT_MODEL_NAME=ProsusAI/finbert

# GPU 사용 여부
USE_GPU=true

# 생성 모델 설정 (Vertex AI OpenAI 호환 API)
GENERATE_MODEL_NAME=openai/gpt-oss-20b-maas
GENERATE_MODEL_TEMPERATURE=0.5
GENERATE_MODEL_MAX_TOKENS=8192

# Vertex AI 설정 (플랫폼 관련)
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# BigQuery 설정 (시계열 데이터 가져오기)
BIGQUERY_DATASET_ID=your-dataset-id
BIGQUERY_TABLE_ID=prophet_features
BIGQUERY_DATE_COLUMN=ds
# 단일 컬럼: BIGQUERY_VALUE_COLUMN=value
# 여러 컬럼: 쉼표로 구분 (예: BIGQUERY_VALUE_COLUMN=price,volume,market_cap)
BIGQUERY_VALUE_COLUMN=yhat,trend,y
BIGQUERY_BASE_DATE=2025-11-14
BIGQUERY_DAYS=30

# 서버 설정
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# 시계열 모델 (XGBoost) 파일 경로
TS_MODEL_PATH=/path/to/your/xgboost_model.pkl
